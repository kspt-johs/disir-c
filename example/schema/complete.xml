<disir_schema>

  <version>1.3.0</version>
  <preferred_output>xml</preferred_output>

  <keyval name="unchanged" type="string">
    <documentation>A value that never changes.</documentation>
    <default>COOL</default>
  </keyval>

  <keyval name="fep_file" type="string">
    <deprecrated version="1.2.0">This configuration file is obsolete.</deprecrated>
    <documentation>A filepath to the FEP configuration file.</documentation>
    <!-- This is the default at semver 1.1.0 - Does not need to be specified.-->
    <default value="/etc/fep/config.cfg"/>
    <!-- This default value overrides the previous default, in version 1.2.0 -->
    <default introduced="1.1.0" value="/etc/fep/general.cfg"/>
  </keyval>

  <section max_occurs="unbounded" name="output" introduced="1.1.0">
    <keyval name="rolling_archive" type="enum">
      <documentation>The Rolling Archive type to use for this output section.</documentation>
      <default>ISP</default>
      <restriction value="ISP"/>
      <restriction value="VCDU"/>
      <restriction value="CADU"/>
    </keyval>
    <keyval name="size" type="int" introduced="1.2.0">
      <documentation>Number of bytes to output at a time.</documentation>
      <default>10000></default>
    </keyval>
  </section>
</disir_schema>
